<section class="box">
  <h2>New Item</h2>
  <%= form_tag("/merchants/#{@merchant_id}/items", method: :post) do %>

    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
    <%= label_tag :image %>
    <%= text_field_tag :image %>
    <%= label_tag :active %>
    <%= text_field_tag :active %>
    <%= label_tag :inventory %>
    <%= text_field_tag :inventory %>

    <%= submit_tag 'Create Item' %>
  <% end %>
</section>
