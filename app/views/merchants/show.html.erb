<section class="box" style=text-align:center;>
  <h2><%= @merchant.name %></h2>

  <p>Address: <%= @merchant.address %></p>
  <p>City: <%= @merchant.city %></p>
  <p>State: <%= @merchant.state %></p>
  <p>Zipcode: <%= @merchant.zipcode %></p>

  <%= button_to 'Edit', "/merchants/#{@merchant.id}/edit", method: :get %>
  <%= button_to 'Delete', "/merchants/#{@merchant.id}", method: :delete %>
</section>
