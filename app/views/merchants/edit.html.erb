<h2>Edit a Merchant</h2>

<%= form_tag "/merchants/#{@merchant.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_area_tag(:message, "bobs burgers") %>
  <%= label_tag :address %>
  <%= text_area_tag(:message, "123 burger lane") %>
  <%= label_tag :city %>
  <%= text_area_tag(:message, "burger city") %>
  <%= label_tag :state %>
  <%= text_area_tag(:message, "burgerana") %>
  <%= label_tag :zipcode %>
  <%= text_area_tag(:message, "12345") %>

  <%= submit_tag 'Submit' %>
<% end %>
